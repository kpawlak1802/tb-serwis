---

interface Props {
  title: string
}

const { title } = Astro.props as Props

---
<li class="shadow-xl w-[250px] rounded-lg flex items-center p-2 h-[80px] md:w-[300px] md:h-[90px] xl:w-[400px] xl:h-[120px] xl:p-5 duration-100 hover:bg-secondary hover:scale-105">
  <p class="text-sm text-center w-full md:text-base xl:text-lg">
    {title}
  </p>
</li>